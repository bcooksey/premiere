{
  "name": "premiere",
  "version": "0.0.3",
  "description": "Easy and powerful JS ORM for Restful clients",
  "main": "build/index.js",
  "typings": "./build/index.d.ts",
  "scripts": {
    "lint": "tslint 'lib/**/*.ts'",
    "pretest": "npm run lint",
    "test": "jest --coverage ${1}",
    "test-watch": "jest ${1} --watch",
    "prepublish": "tsc",
    "build": "echo 1",
    "preversion": "npm test",
    "version": "npm run build && git add -A dist && git add bower.json package.json",
    "postversion": "git push && git push --tags",
    "docs": "typedoc --mode file --module commonjs --readme none --out docs lib --ignoreCompilerErrors --name 'Premiere'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pedsmoreira/premiere"
  },
  "keywords": [
    "restful",
    "api",
    "orm",
    "client",
    "caching"
  ],
  "author": "Pedro Moreira",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pedsmoreira/premiere/issues"
  },
  "homepage": "https://pedsmoreira.github.io/premiere",
  "dependencies": {
    "axios": "^0.15.3"
  },
  "devDependencies": {
    "@types/jest": "^16.0.2",
    "jest": "^18.0.0",
    "ts-jest": "^17.0.3",
    "tslint": "^4.1.1",
    "typedoc": "^0.5.1",
    "typescript": "^2.1.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "lib\/.*\\.spec.(ts|js)$",
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js"
  }
}
